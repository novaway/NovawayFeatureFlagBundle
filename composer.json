{
    "name": "novaway/feature-flag-bundle",
    "description": "Very KISS bundle to manage features flag",
    "type": "symfony-bundle",
    "keywords": ["symfony", "feature", "flag"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy DECOOL",
            "email": "jeremy@activinnov.fr"
        },
        {
            "name": "Novaway Team",
            "email": "git@novaway.fr"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "ext-json": "*",
        "symfony/console": "^5.4|^6.0|^7.0",
        "symfony/expression-language": "^5.4|^6.0|^7.0",
        "symfony/framework-bundle": "^5.4|^6.0|^7.0",
        "symfony/options-resolver": "^5.4|^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "symfony/asset": "^5.4|^6.0|^7.0",
        "symfony/browser-kit": "^5.4|^6.0|^7.0",
        "symfony/css-selector": "^5.4|^6.0|^7.0",
        "symfony/security-bundle": "^7.0",
        "symfony/templating": "^5.4|^6.0|^7.0",
        "symfony/twig-bundle": "^5.4|^6.0|^7.0",
        "symfony/yaml": "^5.4|^6.0|^7.0",
        "twig/twig": "^3.0"
    },
    "suggest": {
        "twig/twig": "To check feature in your Twig templates"
    },
    "autoload": {
        "psr-4": {"Novaway\\Bundle\\FeatureFlagBundle\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
            "Novaway\\Bundle\\FeatureFlagBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
